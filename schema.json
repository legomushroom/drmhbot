{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    }
  },
  "patternProperties": {
    "^.+$": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": { "type": "string" },
          "minLength": 2
        }
      ]
    }
  }
}
